##############################################
# Backup System Configuration File
# --------------------------------------------
# This file defines where and how backups work
##############################################

# === Backup Destination ===
# Folder where all backups will be stored
# (it will be created automatically if it doesn't exist)
BACKUP_DESTINATION=./backups
BACKUP_DIR="./backups"
LOG_FILE="./backup.log"
MAX_BACKUPS=5



# === Excluded Folders ===
# Comma-separated list of folder names or patterns to skip
# (e.g., .git,node_modules,.cache)
EXCLUDE_PATTERNS=".git,node_modules,.cache"


# === Backup Retention Policy ===
# How many backups to keep before deleting old ones
# Daily backups: last 7 days
# Weekly backups: last 4 weeks
# Monthly backups: last 3 months
DAILY_KEEP=7
WEEKLY_KEEP=4
MONTHLY_KEEP=3


# === Optional Email Notification (Simulated) ===
# If you want to simulate sending an email after backup,
# the script can write to email.txt instead of actually sending.
# Leave blank if not needed.
EMAIL_NOTIFICATION=""


# === Dry Run Mode ===
# If set to true, script will show what it would do
# without performing real actions (can also use --dry-run flag)
DRY_RUN=false
